{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wordsp",
  "version": "0.1.0",
  "identifier": "com.words-desktop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Words",
        "width": 800,
        "height": 450
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon128.png"]
  }
}
